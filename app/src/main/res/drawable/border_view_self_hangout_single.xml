<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle" >
            <solid android:color="@color/colorPrimary" />
            <corners android:bottomLeftRadius="@dimen/border_view_radius" android:bottomRightRadius="@dimen/border_view_radius" android:topLeftRadius="@dimen/border_view_radius" android:topRightRadius="0dp"/>
            <stroke android:width="0.5dip" android:color="@android:color/transparent" />
        </shape>
    </item>
    <item android:state_focused="true" >
        <shape  android:shape="rectangle" >
            <solid android:color="@color/colorPrimary" />
            <corners android:bottomLeftRadius="@dimen/border_view_radius" android:bottomRightRadius="@dimen/border_view_radius" android:topLeftRadius="@dimen/border_view_radius" android:topRightRadius="0dp"/>
            <stroke android:width="0.5dip" android:color="@android:color/transparent" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle" >
            <solid android:color="@color/colorPrimary" />
            <corners android:bottomLeftRadius="@dimen/border_view_radius" android:bottomRightRadius="@dimen/border_view_radius" android:topLeftRadius="@dimen/border_view_radius" android:topRightRadius="0dp"/>
            <stroke android:width="0.5dip" android:color="@android:color/transparent" />
        </shape>
    </item>
</selector>