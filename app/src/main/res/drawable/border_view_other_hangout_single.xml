<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle" >
            <corners android:bottomLeftRadius="@dimen/border_view_radius" android:bottomRightRadius="@dimen/border_view_radius" android:topLeftRadius="0dp" android:topRightRadius="@dimen/border_view_radius"/>
            <stroke android:width="0.5dip" android:color="@color/divider" />
        </shape>
    </item>
    <item android:state_focused="true" >
        <shape  android:shape="rectangle" >
            <solid android:color="@color/chatFB" />
            <corners android:bottomLeftRadius="@dimen/border_view_radius" android:bottomRightRadius="@dimen/border_view_radius" android:topLeftRadius="0dp" android:topRightRadius="@dimen/border_view_radius"/>
            <stroke android:width="0.5dip" android:color="@color/chatFB" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle" >
            <solid android:color="@color/chatFB" />
            <corners android:bottomLeftRadius="@dimen/border_view_radius" android:bottomRightRadius="@dimen/border_view_radius" android:topLeftRadius="0dp" android:topRightRadius="@dimen/border_view_radius"/>
            <stroke android:width="0.5dip" android:color="@color/chatFB" />
        </shape>
    </item>
</selector>