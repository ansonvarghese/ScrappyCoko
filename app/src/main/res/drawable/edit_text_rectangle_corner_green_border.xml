<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:thickness="1dp" android:shape="rectangle">
            <solid android:color="@color/rippleColor"/>
            <stroke android:width="0.5dp" android:color="@color/divider"/>
            <corners android:topLeftRadius="3dp" android:topRightRadius="3dp" android:bottomLeftRadius="3dp" android:bottomRightRadius="3dp"/>
        </shape>
    </item>
    <item android:state_focused="true" >
        <shape android:thickness="1dp" android:shape="rectangle">
            <solid android:color="@color/colorPrimary"/>
            <stroke android:width="0.5dp"
                android:color="@color/divider"/>
            <corners android:topLeftRadius="3dp" android:topRightRadius="3dp" android:bottomLeftRadius="3dp" android:bottomRightRadius="3dp"/>
        </shape>
    </item>
    <item>
        <shape android:thickness="1dp" android:shape="rectangle">
            <solid android:color="@color/colorPrimary"/>
            <stroke android:width="0.5dp"
                android:color="@color/divider"/>
            <corners android:topLeftRadius="3dp" android:topRightRadius="3dp" android:bottomLeftRadius="3dp" android:bottomRightRadius="3dp"/>
        </shape>
    </item>
</selector>