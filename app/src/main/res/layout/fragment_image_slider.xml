<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:background="@android:color/black" android:layout_height="match_parent"  xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/black">
        <com.myscrap.view.MultiTouchViewPager android:id="@+id/viewpager" android:layout_width="match_parent" android:layout_height="match_parent" android:background="@android:color/black" />
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentTop="true" android:layout_centerHorizontal="true" android:layout_marginTop="@dimen/fragment_image_slider_text_margin_top" android:textColor="@android:color/white" android:textSize="@dimen/next_to_normal_text_view" android:textStyle="bold" />
        <LinearLayout android:id="@+id/bottom_layout" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content"  android:layout_alignParentBottom="true"  android:orientation="vertical">
            <LinearLayout android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content"  android:orientation="vertical" android:layout_marginBottom="2dp">
                <!--<RelativeLayout android:gravity="center|center_horizontal" android:visibility="gone" android:background="@drawable/ripple_black_bg" android:layout_marginTop="@dimen/fragment_image_slider_like_view_margin" android:layout_marginBottom="@dimen/fragment_image_slider_like_view_margin" android:clickable="true" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1.0">
                    <ImageView android:id="@+id/user_comments_like_text_icon" android:visibility="gone" android:background="@drawable/ripple_black_bg" android:contentDescription="@string/image" android:adjustViewBounds="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/fragment_image_slider_like_image_view_margin" android:layout_marginStart="@dimen/fragment_image_slider_like_image_view_margin" android:src="@drawable/ic_heart_red"  />
                    <TextView android:layout_width="match_parent" android:background="@drawable/ripple_black_bg" android:layout_marginLeft="@dimen/fragment_image_slider_like_view_margin" android:id="@+id/user_comments_like_text" android:layout_height="wrap_content" android:text="" android:textSize="@dimen/normal_text_size"  android:layout_marginRight="@dimen/fragment_image_slider_like_view_margin" android:textColor="@color/secondaryText" android:layout_centerVertical="true" android:layout_toRightOf="@+id/user_comments_like_text_icon" android:layout_toEndOf="@+id/user_comments_like_text_icon" />
                </RelativeLayout>-->
                <LinearLayout
                    android:id="@+id/like_comment_layout"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ripple_black_bg"
                    android:layout_marginTop="@dimen/fragment_image_slider_like_view_margin"
                    android:layout_marginBottom="@dimen/fragment_image_slider_like_view_margin"
                    android:clickable="true"
                    android:layout_width="match_parent"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:layout_gravity="center"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tsLikesCounter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:layout_gravity="center"
                        android:visibility="visible"
                        android:textColor="@color/white"
                        android:textSize="@dimen/medium_text_size"/>

                    <TextView
                        android:id="@+id/dot"
                        android:text="@string/dot"
                        android:gravity="center"
                        android:visibility="gone"
                        android:layout_gravity="start"
                        android:textSize="@dimen/medium_text_size"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/tsCommentsCounter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/medium_text_size"
                        android:textColor="@color/white"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:layout_gravity="center"/>

                </LinearLayout>
                <View style="@style/ImageSliderDividerStyle" android:paddingLeft="8dp"
                    android:paddingRight="8dp" android:layout_marginLeft="@dimen/fragment_image_slider_like_view_margin" android:layout_marginRight="@dimen/fragment_image_slider_like_view_margin"/>
            </LinearLayout>
            <LinearLayout android:id="@+id/user_like_comment_layout" android:weightSum="1" android:background="@android:color/transparent" android:layout_marginTop="@dimen/fragment_image_slider_like_image_view_margin" android:layout_marginBottom="@dimen/fragment_image_slider_like_image_view_margin" android:layout_width="match_parent"  android:layout_height="wrap_content" android:layout_marginLeft="@dimen/fragment_image_slider_like_view_margin" android:layout_marginRight="@dimen/fragment_image_slider_like_view_margin" android:orientation="horizontal" android:baselineAligned="false">
                <RelativeLayout android:layout_marginTop="2dp" android:layout_marginBottom="2dp" android:gravity="center|center_horizontal" android:background="@android:color/transparent" android:clickable="true" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="0.5">
                    <ImageView android:id="@+id/user_like_icon" android:background="@drawable/ripple_black_bg" android:contentDescription="@string/image" android:layout_width="20dp" android:layout_height="20dp" android:tint="@color/white" android:src="@drawable/ic_heart_outline_black" android:layout_centerInParent="true" android:layout_centerHorizontal="true" />
                    <TextView android:layout_width="match_parent" android:layout_gravity="center" android:background="@drawable/ripple_black_bg" android:layout_marginLeft="@dimen/fragment_image_slider_like_image_view_margin" android:layout_marginStart="@dimen/fragment_image_slider_like_image_view_margin" android:id="@+id/like_text" android:layout_height="wrap_content" android:text="@string/like" android:textSize="@dimen/medium_text_size" android:textColor="@color/white" android:textStyle="bold" android:layout_centerVertical="true" android:layout_toRightOf="@+id/user_like_icon" android:layout_toEndOf="@+id/user_like_icon" />
                </RelativeLayout>
                <RelativeLayout android:layout_marginTop="2dp" android:layout_marginBottom="2dp"  android:gravity="center|center_horizontal" android:background="@android:color/transparent" android:clickable="true" android:id="@+id/user_status_comment_icon_layout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="0.5">
                    <ImageView android:id="@+id/user_comment_icon" android:background="@drawable/ripple_black_bg" android:contentDescription="@string/image" android:layout_width="20dp"  android:layout_height="20dp" android:tint="@color/white"  android:src="@drawable/ic_comment_outline_20" android:layout_centerInParent="true"   />
                    <TextView android:layout_width="match_parent" android:layout_gravity="center" android:background="@drawable/ripple_black_bg" android:textStyle="bold" android:layout_marginLeft="@dimen/fragment_image_slider_like_image_view_margin" android:layout_marginStart="@dimen/fragment_image_slider_like_image_view_margin" android:id="@+id/comment_text" android:layout_height="wrap_content" android:text="@string/comment" android:textSize="@dimen/medium_text_size"  android:layout_marginRight="@dimen/fragment_image_slider_like_view_margin" android:layout_marginEnd="@dimen/fragment_image_slider_like_view_margin" android:textColor="@color/white" android:layout_centerVertical="true" android:layout_toRightOf="@+id/user_comment_icon" android:layout_toEndOf="@+id/user_comment_icon" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
    <android.support.v7.widget.Toolbar android:id="@+id/my_toolbar" android:layout_width="match_parent" android:layout_height="wrap_content" android:gravity="top" android:background="@android:color/transparent" android:minHeight="?attr/actionBarSize" android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" app:popupTheme="@style/ThemeOverlay.AppCompat.Light">
        <ImageView android:id="@+id/overflow" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="end" android:layout_marginRight="16dp" android:layout_marginEnd="16dp" android:tint="@color/white" android:src="@drawable/ic_more_grey" />
        <ImageView android:id="@+id/back" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="start" android:layout_marginLeft="16dp" android:layout_marginStart="16dp" android:tint="@color/white" android:src="@drawable/nav_arrow_back" />
    </android.support.v7.widget.Toolbar>
</FrameLayout>