<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent" android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto" android:background="@color/fb_view_bg" tools:context="com.myscrap.ResetPasswordActivity">
    <android.support.design.widget.AppBarLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/appbar" android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <android.support.v7.widget.Toolbar android:id="@+id/toolbar" android:layout_width="match_parent" android:layout_height="?attr/actionBarSize" android:background="?attr/colorPrimary" app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />
    </android.support.design.widget.AppBarLayout>
    <LinearLayout android:layout_below="@+id/appbar" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/activity_reset_password_margin" android:layout_marginRight="@dimen/activity_reset_password_margin" android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/activity_reset_password_margin" android:layout_marginRight="@dimen/activity_reset_password_margin" android:layout_marginTop="@dimen/activity_reset_password_margin_top" android:layout_marginBottom="@dimen/activity_reset_password_margin_bottom">
                <TextView android:id="@+id/title" android:layout_marginTop="@dimen/activity_reset_password_inside_margin" android:layout_marginBottom="@dimen/activity_reset_password_inside_margin" android:layout_width="match_parent" android:layout_height="wrap_content" android:gravity="center" android:text="" android:textColor="@color/black" android:textSize="@dimen/next_to_normal_text_view" android:textStyle="bold" />
                <TextView android:id="@+id/sub_title" android:layout_width="match_parent"  android:layout_below="@+id/title" android:layout_marginBottom="@dimen/activity_reset_password_inside_margin"  android:gravity="center"  android:layout_height="wrap_content" android:text="" android:textSize="@dimen/normal_text_size" android:textColor="@color/black"/>
            </RelativeLayout>
            <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/activity_reset_password_margin" android:layout_marginRight="@dimen/activity_reset_password_margin">
                <EditText android:id="@+id/password_edit_text" android:textSize="@dimen/next_to_normal_text_view"  android:focusable="true" android:focusableInTouchMode="true" android:layout_width="match_parent" android:gravity="center" android:layout_height="wrap_content" android:textColorHint="@color/hint" android:inputType="textPassword" />
                <TextView android:id="@+id/password_hint" android:layout_width="match_parent"  android:layout_below="@+id/password_edit_text" android:layout_marginBottom="@dimen/activity_reset_password_inside_margin"  android:gravity="center"  android:layout_height="wrap_content" android:text="" android:textSize="@dimen/normal_text_size" android:textColor="@color/black"/>
            </RelativeLayout>
    </LinearLayout>
    <Button android:id="@+id/continue_button" android:textSize="@dimen/next_to_normal_text_view"  android:text="@string/continue_caps" style="@style/LoginButton" android:layout_marginLeft="@dimen/activity_reset_password_inside_of_inside_margin" android:layout_marginRight="@dimen/activity_reset_password_inside_of_inside_margin" android:layout_centerVertical="true" android:layout_alignParentLeft="true" android:layout_alignParentStart="true" />
    <Button android:id="@+id/send_code_again" android:textSize="@dimen/normal_text_size"  android:visibility="visible" android:text="@string/send_code_again" android:layout_marginLeft="@dimen/activity_reset_password_inside_of_inside_margin" android:layout_marginRight="@dimen/activity_reset_password_inside_of_inside_margin" style="@style/SendCodeAgainButton" android:layout_marginBottom="@dimen/activity_reset_password_margin"  android:layout_centerVertical="true" android:layout_alignParentLeft="true" android:layout_alignParentStart="true" android:layout_alignParentBottom="true" android:layout_alignLeft="@+id/continue_button" android:layout_alignStart="@+id/continue_button" />
</RelativeLayout>
