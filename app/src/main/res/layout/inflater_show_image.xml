<?xml version="1.0" encoding="utf-8"?>
<com.myscrap.view.SquaredFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/total_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="2dp">
        <ImageView
            android:id="@+id/imgShowing"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:layout_gravity="center"
            android:contentDescription=""
            tools:ignore="ContentDescription" />
        <ImageView
            android:id="@+id/imgSelector"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:layout_gravity="center"
            tools:ignore="ContentDescription" />
        <CheckBox android:id="@+id/checkBox1" android:visibility="gone" android:buttonTint="@color/colorPrimary"  android:layout_gravity="end|top" android:layout_width="wrap_content" android:layout_height="wrap_content" />
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_gravity="bottom"
            android:layout_marginBottom="2dp"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txtFolderName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:padding="5dp"
            android:layout_gravity="start|bottom"
            android:textColor="@android:color/white"
            android:shadowColor="@color/text_shadow"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="3"
            android:textSize="14sp"
            android:visibility="visible" />
        <TextView
            android:id="@+id/txtFolderImageCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:padding="5dp"
            android:layout_gravity="end|bottom"
            android:textColor="@android:color/white"
            android:shadowColor="@color/text_shadow"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="3"
            android:textSize="12sp"
            android:visibility="visible" />
        </FrameLayout>
    </FrameLayout>
</com.myscrap.view.SquaredFrameLayout>