<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:orientation="horizontal"
app:cardCornerRadius="2dp" android:background="@color/chatBG"
app:cardUseCompatPadding="true">
<LinearLayout
    android:layout_width="match_parent" android:layout_height="wrap_content"  android:gravity="center" android:layout_margin="5dp" android:orientation="horizontal">
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">
        <RelativeLayout
            android:id="@+id/icon_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/icon_front"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:fillAfter="false"
                android:fillEnabled="false">

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/icon_profile"
                    android:scaleType="centerCrop"
                    android:layout_width="@dimen/icon_width_height"
                    android:layout_height="@dimen/icon_width_height" />

                <TextView
                    android:id="@+id/icon_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/icon_text" />
            </RelativeLayout>
        </RelativeLayout>
        <TextView
            android:id="@+id/top"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:visibility="gone"
            android:background="@drawable/top_in_active"
            android:layout_marginBottom="5dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="@dimen/small_text_size"
            android:layout_width="wrap_content"
            android:layout_gravity="bottom|end"
            android:gravity="center"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/online"
            android:layout_width="@dimen/chat_room_list"
            android:layout_height="@dimen/chat_room_list"
            android:layout_gravity="bottom|end"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="@dimen/chat_room_list_inside_margin"
            android:background="@drawable/bg_green_circle"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/normal_text_size"
            android:visibility="gone" />
    </FrameLayout>
    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/message_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:textColor="@color/msPrimaryTextColor"
            android:textSize="@dimen/next_to_normal_text_view"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/des_comp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:visibility="gone"
            android:layout_marginTop="2dp"
            android:textColor="@color/msSecondaryTextColor"
            android:textSize="@dimen/normal_text_size"
            android:layout_below="@+id/name" />

        <TextView
            android:id="@+id/country"
            android:layout_below="@+id/des_comp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:layout_marginTop="2dp"
            android:visibility="gone"
            android:textColor="@color/msSecondaryTextColor"
            android:textSize="@dimen/normal_text_size"
            android:textStyle="normal" />

    </RelativeLayout>
</LinearLayout>
</LinearLayout>