<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools" xmlns:emojicon="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="match_parent" android:focusableInTouchMode="true" android:id="@+id/rootLayout" android:visibility="gone" android:background="@color/white" tools:context="com.myscrap.NewsViewActivity" tools:showIn="@layout/activity_news_view">
    <android.support.v4.widget.NestedScrollView android:id="@+id/nested"  android:layout_alignParentTop="true" android:layout_width="match_parent" android:layout_above="@+id/root_bottom_view" android:layout_height="wrap_content">
        <LinearLayout android:layout_width="match_parent" android:layout_margin="10dp" android:layout_height="wrap_content" android:orientation="vertical">
            <TextView android:id="@+id/heading" android:layout_marginTop="0dp" android:textSize="@dimen/xx_large_text_view" android:textColor="@color/black" android:textStyle="bold" android:textColorHint="@color/colorPrimaryDark" android:layout_width="match_parent" android:layout_height="wrap_content" />
            <TextView android:id="@+id/sub_head_lines" android:visibility="gone" android:lineSpacingExtra="4dp" android:layout_marginTop="10dp"  android:textSize="@dimen/next_to_normal_text_view" android:textColor="@color/black"  android:textColorHint="@color/colorPrimaryDark" android:layout_width="match_parent" android:layout_height="wrap_content" />
            <TextView android:id="@+id/author" android:visibility="gone" android:layout_marginTop="10dp"  android:textSize="@dimen/next_to_normal_text_view" android:textColor="@color/colorPrimary" android:textColorHint="@color/colorPrimaryDark" android:layout_width="match_parent" android:layout_height="wrap_content" />
            <TextView android:id="@+id/author_company" android:visibility="gone" android:layout_marginTop="10dp"  android:drawableStart="@drawable/ic_news_grey600_18dp" android:drawableLeft="@drawable/ic_news_grey600_18dp" android:drawablePadding="5dp" android:padding="5dp" android:layout_gravity="center"   android:textSize="@dimen/small_text_size" android:textColor="@color/colorPrimary" android:textColorHint="@color/colorPrimaryDark" android:layout_width="match_parent" android:layout_height="wrap_content" />
            <TextView android:id="@+id/location" android:visibility="gone" android:layout_marginTop="5dp"  android:textSize="@dimen/normal_text_size" android:textColor="@color/black" android:textColorHint="@color/colorPrimaryDark" android:layout_width="match_parent" android:layout_height="wrap_content" />
            <ImageView android:visibility="gone" android:layout_marginTop="5dp"  android:id="@+id/ivFeedBottom" android:layout_width="match_parent" android:layout_height="?actionBarSize" />
            <TextView android:id="@+id/news_link" android:visibility="gone" android:layout_marginTop="5dp"  android:layout_width="wrap_content" android:layout_height="wrap_content"  android:autoLink="web" android:text="" android:textIsSelectable="false" android:textColor="@color/colorPrimary" android:textColorHint="@color/colorPrimaryDark" android:textSize="@dimen/normal_text_size" />
            <com.myscrap.view.SquaredFrameLayout
                android:id="@+id/vImageRoot"
                android:visibility="visible"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <FrameLayout
                    android:id="@+id/view_pager_layout"
                    android:layout_width="match_parent"
                    android:visibility="gone"
                    android:layout_height="match_parent">

                    <com.myscrap.view.MultiTouchViewPager
                        android:id="@+id/view_pager"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <RelativeLayout
                        android:id="@+id/left_right_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:visibility="gone"
                        android:orientation="horizontal" >
                        <ImageView
                            android:id="@+id/left"
                            android:src="@drawable/ui_chevron_left_s"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:padding="10dp"
                            android:tint="@color/white"
                            android:background="@drawable/shadow"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"/>
                        <ImageView
                            android:id="@+id/right"
                            android:src="@drawable/ui_chevron_right_s"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:paddingTop="8dp"
                            android:tint="@color/white"
                            android:paddingBottom="8dp"
                            android:padding="10dp"
                            android:background="@drawable/shadow"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true" />
                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/layoutDots"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dots_height"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="10dp"
                        android:gravity="center"
                        android:orientation="horizontal" />
                </FrameLayout>

                <View
                    android:id="@+id/vBgLike"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_like_circle_background"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/ivLike"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="center"
                    android:src="@drawable/ic_heart_outline_white"
                    android:visibility="invisible" />

            </com.myscrap.view.SquaredFrameLayout>
            <TextView android:id="@+id/time" android:layout_marginTop="10dp" android:layout_marginBottom="5dp" android:drawablePadding="0dp" android:drawableStart="@drawable/ic_clock_black_18dp" android:drawableLeft="@drawable/ic_clock_black_18dp"  android:layout_gravity="center" android:gravity="start|center" android:textSize="@dimen/small_text_size" android:visibility="gone" android:text=""  android:textColor="@color/news_time_stamp" android:textColorHint="@color/colorPrimaryDark" android:layout_width="match_parent" android:layout_height="wrap_content" />
            <TextView android:id="@+id/status" android:layout_marginTop="10dp"   android:lineSpacingExtra="4dp" android:layout_width="match_parent" android:layout_height="wrap_content"  android:autoLink="web" android:text="" android:textIsSelectable="true" android:textColor="@color/black" android:textColorHint="@color/colorPrimaryDark" android:textSize="@dimen/next_to_normal_text_view" />
            <LinearLayout
                android:id="@+id/like_comment_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="0dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:padding="8dp">

                <TextSwitcher
                    android:id="@+id/tsLikesCounter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:inAnimation="@anim/slide_in_likes_counter"
                    android:outAnimation="@anim/slide_out_likes_counter"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Like"
                        android:textColor="@color/secondaryText"
                        android:textSize="@dimen/medium_text_size" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Like"
                        android:textColor="@color/secondaryText"
                        android:textSize="@dimen/medium_text_size" />
                </TextSwitcher>

                <TextView
                    android:id="@+id/dot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:gravity="center"
                    android:text="@string/dot"
                    android:textColor="@color/secondaryText"
                    android:textSize="@dimen/medium_text_size"
                    android:visibility="gone" />

                <TextSwitcher
                    android:id="@+id/tsCommentsCounter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:inAnimation="@anim/slide_in_likes_counter"
                    android:outAnimation="@anim/slide_out_likes_counter"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Comment"
                        android:textColor="@color/secondaryText"
                        android:textSize="@dimen/medium_text_size" />

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Comment"
                        android:textColor="@color/secondaryText"
                        android:textSize="@dimen/medium_text_size" />
                </TextSwitcher>

            </LinearLayout>
            <View android:layout_width="match_parent" android:layout_height="0.5dp" android:layout_marginTop="1dp" android:background="@color/divider"/>
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:background="@color/white" android:baselineAligned="false" android:padding="@dimen/fragment_feeds_inner_margin_top_bottom" android:orientation="horizontal">
                <RelativeLayout
                    android:id="@+id/user_status_like_icon_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.33"
                    android:background="@drawable/ripple_empty_bg"
                    android:clickable="true"
                    android:gravity="center|center_horizontal"
                    android:orientation="horizontal"
                    android:padding="@dimen/fragment_feeds_inner_margin_top_bottom">

                    <ImageButton
                        android:id="@+id/btnLike"
                        android:layout_width="@dimen/like_comment_button"
                        android:layout_height="@dimen/like_comment_button"
                        android:background="@null"
                        android:clickable="true"
                        android:contentDescription="@string/image"
                        android:src="@drawable/ic_heart_outline_black" />

                    <TextView
                        android:id="@+id/like_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_toEndOf="@+id/btnLike"
                        android:layout_toRightOf="@+id/btnLike"
                        android:clickable="true"
                        android:gravity="start"
                        android:text="@string/like"
                        android:textColor="@color/black"
                        android:textSize="@dimen/medium_text_size"
                        android:textStyle="normal" />

                </RelativeLayout>
                <RelativeLayout android:id="@+id/user_status_comment_icon_layout" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_weight="0.33" android:background="@drawable/ripple_empty_bg" android:clickable="true" android:gravity="center|center_horizontal" android:orientation="horizontal" android:padding="@dimen/fragment_feeds_inner_margin_top_bottom">
                    <ImageButton android:id="@+id/btnComments" android:layout_width="@dimen/like_comment_button" android:layout_height="@dimen/like_comment_button" android:background="@null" android:clickable="true" android:contentDescription="@string/image" android:src="@drawable/ic_comment_outline_20" android:tint="@color/black" />
                    <TextView android:id="@+id/comment" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true" android:layout_marginLeft="5dp" android:layout_marginRight="5dp" android:layout_toEndOf="@+id/btnComments" android:layout_toRightOf="@+id/btnComments" android:clickable="true" android:gravity="start" android:text="@string/comment" android:textColor="@color/black" android:textSize="@dimen/medium_text_size" android:textStyle="normal" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/user_status_report_icon_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/fragment_feeds_inner_margin_left_right"
                    android:layout_marginRight="@dimen/fragment_feeds_inner_margin_left_right"
                    android:layout_weight="0.33"
                    android:background="@drawable/ripple_empty_bg"
                    android:clickable="true"
                    android:gravity="end|center_horizontal"
                    android:orientation="horizontal"
                    android:padding="@dimen/fragment_feeds_inner_margin_top_bottom"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/ic_report"
                        android:layout_width="@dimen/like_comment_button"
                        android:layout_height="@dimen/like_comment_button"
                        android:layout_marginRight="10dp"
                        android:layout_marginEnd="10dp"
                        android:clickable="true"
                        android:contentDescription="@string/image"
                        android:src="@drawable/more_new"
                        android:tint="@color/black" />

                    <TextView
                        android:id="@+id/location_layout_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_toEndOf="@+id/ic_report"
                        android:layout_toRightOf="@+id/ic_report"
                        android:clickable="true"
                        android:gravity="start"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="@dimen/medium_text_size"
                        android:textStyle="normal"
                        android:visibility="gone" />
                </RelativeLayout>
            </LinearLayout>
            <View android:layout_width="match_parent" android:layout_height="0.5dp" android:layout_marginTop="1dp" android:background="@color/divider"/>
            <LinearLayout android:layout_marginTop="0dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:padding="0dp">
                <android.support.v7.widget.RecyclerView android:id="@+id/comment_rv" android:scrollbars="vertical" android:layout_width="match_parent" android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
    <LinearLayout  android:id="@+id/root_bottom_view" android:visibility="visible" android:layout_alignParentBottom="true" android:layout_width="match_parent"  android:layout_height="wrap_content" android:layout_marginRight="8dp" android:layout_marginLeft="8dp" android:layout_marginTop="8dp" android:layout_marginBottom="8dp" android:orientation="horizontal" tools:ignore="PrivateResource">
        <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_gravity="center" android:layout_weight="1" android:background="@drawable/border_view_feeds_status_box" android:orientation="horizontal">
            <ImageView android:id="@+id/emoji_btn" android:layout_width="24dp" android:layout_height="24dp" android:layout_gravity="bottom" android:visibility="gone" tools:ignore="ContentDescription" />
            <hani.momanii.supernova_emoji_library.Helper.EmojiconEditText android:id="@+id/emojicon_edit_text" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_gravity="center" android:layout_marginLeft="12dp" android:layout_marginStart="12dp" android:background="@null" android:hint="@string/write_a_comment" android:imeActionId="@+id/send" android:imeActionLabel="@string/action_send" android:inputType="textMultiLine" android:maxHeight="75dp" android:scrollHorizontally="true" android:scrollbars="vertical" android:textColorHint="@color/msNormalTextColor" android:textCursorDrawable="@null" android:textSize="@dimen/next_to_normal_text_view" emojicon:emojiconSize="28sp" />
        </LinearLayout>
        <ImageButton android:id="@+id/submit_btn" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="10dp" android:layout_gravity="center" android:tint="@color/msNormalTextColor" android:background="@null" android:src="@drawable/ic_send" tools:ignore="ContentDescription" />
    </LinearLayout>
</RelativeLayout>
